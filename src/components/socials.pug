mixin socials(mod)
    ul.socials(class=(mod ? 'socials_' + mod : ''))
        - var socials = [{ name: 'insta', url: 'https://www.instagram.com' }, { name: 'vk', url: 'https://vk.com/qbic007' }, { name: 'github', url: 'https://github.com/Qbic007' }]
        each item in socials
            li.socials__item
                a.socials__link(href=item.url target="_blank")
                    +icon(`${item.name}`,`socials__icon socials__icon_${item.name}`)