.footer {
    display: flex;
    justify-content: space-between;
}

.footer__info-container {
    display: flex;
    flex-direction: column;
}

.footer__main-container {
    display: flex;
    flex-direction: column;
}

.footer__lower-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.footer__lower-container-part {
    display: flex;
    flex-direction: column;
    width: 48%;
}